{
  "extends": [
    "config:base"
  ],
  "commitBody": "[skip ci]",
  "commitMessageSuffix": "[skip netlify]",
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "updateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "packagePatterns": [
        "*"
      ],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": [
        "engines",
        "peerDependencies",
        "resolutions"
      ],
      "rangeStrategy": "auto"
    }
  ]
}
